<div class="page-header">
  <%= link_to new_post_path, :class => 'btn btn-primary' do %>
    <i class="icon-plus icon-white"></i>
    New Post
  <% end %>
  <h1>Listing posts</h1>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Title</th>
      <th>Body</th>
      <th>Category</th>
      <th>Published</th>
      <th>Custom date</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
<% @posts.each do |post| %>
    <tr>
      <td><%= link_to "#{post.name}", post %></td>
      <td><%= post.gender %></td>
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td><%= post.category %></td>
      <td><%= post.published %></td>
      <td><%= post.custom_date %></td>
      <td>
		<%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-mini' %>
		<%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini btn-danger' %>
	  </td>
    </tr>
<% end %>
  </tbody>
</table>
